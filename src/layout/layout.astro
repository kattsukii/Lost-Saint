---
import BaseHead, { type Props } from "~/components/BaseHead.astro";
import Footer from "~/components/Footer.astro";

import "~/styles/index.css";

const { ...head } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead {...head} />
	</head>

	<header class="primary-header content-grid">
		<div class="breakout">
			<slot name="header-content"/>
			
			</slot>
		</div>
	</header>

	<body>
		<main id="main" class="flow content-grid">
			<slot />
		</main>

	</body>
	
	<Footer/>
</html>